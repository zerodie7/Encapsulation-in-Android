<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:foreground="?attr/selectableItemBackground">

    <ImageView
            app:srcCompat="@mipmap/ic_launcher" android:id="@+id/ivFoto"
            android:layout_weight="1" android:layout_width="90dp" android:layout_height="36dp"
            android:layout_margin="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvNombre" android:layout_weight="1"
            android:layout_gravity="center_vertical" android:textAppearance="@style/AppTheme.TituloCel"/>
</LinearLayout>