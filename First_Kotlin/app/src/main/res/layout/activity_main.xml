<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="128dp"
            android:layout_height="21dp"
            android:text="Nombre"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="16dp"
            android:id="@+id/twNombre" android:layout_marginLeft="16dp"
            android:textColor="@color/colorTexto"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>

    <Button
            android:text="Saludo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/btSaludar" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <CheckBox
            android:text="Soy Desarrollador"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/cbDeveloper" app:layout_constraintStart_toEndOf="@+id/etNombre"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.552"/>
    <EditText
            android:layout_width="245dp"
            android:layout_height="38dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etNombre"
            app:layout_constraintTop_toBottomOf="@+id/twNombre"
            android:layout_marginStart="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>

</android.support.constraint.ConstraintLayout>