<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/texto_boton_validar_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btValidarRed" android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="@string/texto_boton_solicitud_HTTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btSolicitudHTTP" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/btValidarRed"/>
    <Button
            android:text="@string/texto_boton_volley"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btVolley" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/btSolicitudHTTP" app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="@string/texto_boton_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btOk" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/btVolley" app:layout_constraintHorizontal_bias="0.498"/>


</android.support.constraint.ConstraintLayout>